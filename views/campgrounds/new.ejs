<%- include("../partials/header") %>
<div class="container" style="text-align:center;">
	<h1> Create a new campground!! </h1>
	<form action="/campgrounds" method="post" style="width:30%; margin:0 auto">
		<div class="form-group">
			<input class="form-control" type= "text" placeholder="name" name="name">
		</div>
		
		<div class="form-group">
			<input class="form-control" type= "url" placeholder="image url" name="image">
		</div>
		<div class="form-group">
			<input class="form-control" type= "number" placeholder="price per night" name="price" min="0.01" step="0.01">
		</div>
		
		<div class="form-group">
			<input class="form-control" type= "text" placeholder="description" name="description">
		</div>
		
		<input class="btn btn-lg btn-default btn-block" type="submit" >
	</form>
	<a class="btn btn-primary" href="/campgrounds"> Go Back</a>
</div>
 <%- include("../partials/footer") %>
