<%- include("../partials/header") %>
<div class="container" style="text-align:center;">
	<h1> Edit the campground :<%=campground.name%> !! </h1>
	<form action="/campgrounds/<%=campground._id%>/?_method=PUT " method="POST" style="width:30%; margin:0 auto">
		<div class="form-group">
			<input class="form-control" type= "text" value="<%=campground.name%>" name="campground[name]">
		</div>
		
		<div class="form-group">
			<input class="form-control" type= "url" value="<%=campground.image%>" name="campground[image]">
		</div>
		
		<div class="form-group">
			<input class="form-control" type= "number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
		</div>
		
		<div class="form-group">
			<input class="form-control" type= "text" value="<%=campground.description%>" name="campground[description]">
		</div>
		
		<input class="btn btn-lg btn-default btn-block" type="submit" >
	</form>
	<a class="btn btn-primary" href="/campgrounds"> Go Back</a>
</div>
 <%- include("../partials/footer") %>
